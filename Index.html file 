products.forEach(p=>{
 grid.innerHTML+=`
  <div class="card">
    <img src="${p.i}">
    <h3>${p.n}</h3>
    <p>â‚¦${p.p}</p>
    <button class="btn" onclick="addToCart('${p.n}',${p.p})">Add to Cart</button>
  </div>`;
