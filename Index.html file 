function addToCart(n,p){
 cart.push({n,p});
 renderCart();
}

function renderCart(){
 cartItems.innerHTML="";
 let total=0;
 cart.forEach(i=>{
  total+=i.p;
  cartItems.innerHTML+=`<li>${i.n} â€“ â‚¦${i.p}</li>`;
 });
 totalEl.innerText=total;
}

